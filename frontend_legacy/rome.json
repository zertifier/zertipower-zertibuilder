{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "performance": {
        "noDelete": "off"
      }
    }
  },
  "formatter": {
    "ignore": ["*.js", "*.json"],
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "tab",
    "indentSize": 4,
    "lineWidth": 100
  }
}
